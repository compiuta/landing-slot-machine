{
  "name": "landing-slot-machine",
  "version": "1.0.0",
  "description": "",
  "main": "index.html",
  "scripts": {
    "build:css": "node-sass --output-style compressed -o dist/css src/scss",
    "build:js": "uglifyjs -o dist/js/landing.min.js src/js/landing.js",
